grammar org.xtext.example.mydsl.MyDsl with org.eclipse.xtext.common.Terminals

generate myDsl "http://www.xtext.org/example/mydsl/MyDsl"
 
UNO_DamienCantin:
	uno='Uno game' + var=ID + ':'
	(base= BaseVariants
	variants= Variants)?;
	
BaseVariants:
	'Base:' ('Points' | 'Cry Uno' | 'Same number' | 'Same Color')+  
;

BaseVariant: 	
	('Points' | 'Cry Uno' | 'Same number' | 'Same Color')
;

Variants:
	
	'Variants:' + (Hand | SpecialCard | Stacking | '2 players game' | 'Uno Mao' | 'Exchange Card' | 'Suite')+
;

Hand :
	'Hand:'+ ('Hands Down' | 'Three Hands Uno')+
;

SpecialCard:
	'Special Card:' + ( WildCard | 'Card Bomb' )+
;
WildCard:
	'WildCard:' + ('ShownDown' | 'Roulette')
;

Stacking:
	'Stacking:' + ('All Cards' | 'All except special cards')
;
